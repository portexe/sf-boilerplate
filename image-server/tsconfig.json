{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
